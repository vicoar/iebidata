<% title "Editar Referencia" %>

<h1><%= yield :title %></h1>

<%= form_for(@referencia, :html => { :multipart => true }) do |f| %>
  
  <%= render :partial => 'form', :locals => {:f => f} %>
  
  <p>
  	<button type="submit" class="blue">Actualizar</button>
	<%= button_link "Volver a #{@referencia.taxon.nombre}", @referencia.taxon, "black" %>
  </p>
<% end %>
